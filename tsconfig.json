{
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "noEmit": true,
    "module": "es6",
    "target": "es3",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "traceResolution": false,
    "listFiles": true,
    "listEmittedFiles": false,
    "pretty": true,
    "emitDecoratorMetadata": true,  
    "experimentalDecorators": true,
    "types": [      
    ]
  },
  "include": [
     "src/**/*"
  ]
}